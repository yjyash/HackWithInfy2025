class Solution {
    public int coinChange(int[] coins, int amount) {
        if(amount==0)
        {
            return 0;
        }
        Arrays.sort(coins);
        int ans=0;
        for(int i=coins.length-1; i>=0; i--)
        {
            while(amount>=coins[i])
            {
                amount-=coins[i];
                ans += 1;
            }
        }
        if(amount==0) return ans;
        else return -1;
        
    }
}
